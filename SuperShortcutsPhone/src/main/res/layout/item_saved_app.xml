<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/items"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="15dp"
    android:background="@drawable/popup_saved_app_shortcut_background"
    android:visibility="visible">

    <Button
        android:id="@+id/deleteItem"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/ic_cancel_stable_light" />

    <TextView
        android:id="@+id/itemAppName"
        android:layout_width="200dp"
        android:layout_height="53dp"
        android:layout_toEndOf="@id/deleteItem"
        android:gravity="center"
        android:padding="6dp"
        android:shadowColor="@color/default_color_darker"
        android:shadowRadius="19"
        android:lines="1"
        android:text="@string/app_name"
        android:textColor="@color/light"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/appIconItem"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_toEndOf="@id/itemAppName"
        android:layout_centerVertical="true"
        android:layout_marginEnd="9dp"
        android:foregroundGravity="center"
        android:padding="5dp"
        android:src="@drawable/ic_launcher"
        android:background="@drawable/app_shortcut_icon"/>

</RelativeLayout>
