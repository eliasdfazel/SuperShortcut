<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="GeeksEmpire" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:colorPrimary">@color/default_color</item>
        <item name="android:colorPrimaryDark">@color/default_color_darker</item>
        <item name="android:colorAccent">@color/default_color_light</item>
        <item name="android:colorControlActivated">@color/default_color</item>
    </style>

    <style name="GeekySplash" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:colorPrimary">@color/default_color</item>
        <item name="android:colorPrimaryDark">@color/default_color</item>
        <item name="android:colorAccent">@color/default_color</item>
        <item name="android:colorControlActivated">@color/default_color</item>
        <item name="android:navigationBarColor">@color/default_color</item>
        <item name="android:windowBackground">@drawable/splash_screeen</item>
    </style>

    <style name="GeeksEmpire.Dialogue.Light" parent="@android:style/Theme.DeviceDefault.Light.Dialog.Alert" tools:targetApi="22">
        <item name="android:colorPrimary">@color/default_color</item>
        <item name="android:colorAccent">@color/default_color_light</item>
        <item name="android:textColorPrimary">@color/default_color_darker</item>
        <item name="android:colorPrimaryDark">@color/default_color_darker</item>
        <item name="android:textColorAlertDialogListItem">@color/dark</item>
        <item name="android:background">@color/light</item>
        <item name="android:colorControlActivated">@color/default_color_light</item>

        <item name="android:popupBackground">@color/light</item>
        <item name="android:itemTextAppearance">@style/PopupTextColor.Light</item>
        <item name="android:popupElevation">13dp</item>

        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">107dp</item>
    </style>

    <style name="Transparent" parent="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="PopupTextColor.Light" parent="@android:style/TextAppearance.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/dark</item>
    </style>

</resources>