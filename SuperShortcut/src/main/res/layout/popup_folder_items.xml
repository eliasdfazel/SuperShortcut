<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/items"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_folder_items_background"
    android:visibility="visible">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appIconItemView"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="13dp"
        android:padding="5dp"
        android:src="@drawable/ic_launcher"
        android:background="@drawable/app_shortcut_icon"/>

    <TextView
        android:id="@+id/appNameItemView"
        android:layout_width="200dp"
        android:layout_height="53dp"
        android:layout_toEndOf="@id/appIconItemView"
        android:gravity="center_vertical"
        android:paddingHorizontal="19dp"
        android:lines="1"
        android:text="@string/app_name"
        android:textColor="@color/light"
        android:textSize="17sp" />

</RelativeLayout>
